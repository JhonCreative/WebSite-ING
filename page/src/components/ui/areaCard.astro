---
interface Props {
  area: {
    id: string;
    nombre: string;
    color: string;
    descripcion: string;
    totalMaterias: number;
    semestreConMasMaterias: number;
    materiasPorSemestre: number[];
  };
}

const { area } = Astro.props;

// Calcular el porcentaje que representa esta Ã¡rea en el plan de estudios
const porcentajeDelPlan = Math.round((area.totalMaterias / 70) * 100);
---

<div 
  class="border-2 border-[#d6d6d6] rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-300 flex flex-col h-full bg-white opacity-80 backdrop-blur-lg"
>
  <div class="p-5 flex-grow">
    <h3 class="text-[13px] font-bold mb-2">{area.nombre}</h3>
    <p class="text-[12px] mb-4">{area.descripcion}</p>
    
    <div class="space-y-3">
      <div>
        <div class="flex justify-between text-[12px] mb-1">
          <span>Total de materias:</span>
          <span class="font-medium">{area.totalMaterias}</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-2">
          <div 
            class="h-2 rounded-full bg-gray-500" 
            style={`width: ${porcentajeDelPlan}%;`}
          ></div>
        </div>
        <p class="text-[11px] mt-1">
          {porcentajeDelPlan}% del plan de estudios
        </p>
      </div>
    </div>
  </div>
</div>

